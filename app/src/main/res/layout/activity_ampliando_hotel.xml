<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".AmpliandoHotel">
    <ImageView
        android:id="@+id/hotel11"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/hotel1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/titulohotel11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel ANCESTRAL GLAMPING"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/hotel11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/descrp11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300.000COP"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/titulohotel11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/contacto11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacto:"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/descrp11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/telefono11"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/telefono11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3540454545"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/descrp11"
        app:layout_constraintStart_toEndOf="@+id/contacto11"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/boton_reservar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reservar"
        app:layout_constraintTop_toBottomOf="@+id/contacto11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="#007bff"
        android:textColor="#ffffff" />


</androidx.constraintlayout.widget.ConstraintLayout>