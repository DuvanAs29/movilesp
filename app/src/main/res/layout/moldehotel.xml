<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hotel11"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/hotel1"
        app:layout_constraintVertical_bias="0"
        />
    <TextView
        android:id="@+id/titulohotel11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Hotel ANCESTRAL GLAMPING"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="26dp"
        android:textStyle="bold"
        />
<TextView
   android:id="@+id/precio11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/titulohotel11"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.1"
    app:layout_constraintHorizontal_bias="0.01"
    android:text="300.000COP"
    android:textSize="28dp"
    />
    <TextView
        android:id="@+id/contacto11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulohotel11"
        app:layout_constraintStart_toEndOf="@id/precio11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Contacto:"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.02"
        android:textSize="28dp"

        />

    <TextView
        android:id="@+id/telefono11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3540454545"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@id/contacto11"
        app:layout_constraintTop_toBottomOf="@id/titulohotel11"
        app:layout_constraintVertical_bias="0.1"

        />

</androidx.constraintlayout.widget.ConstraintLayout>